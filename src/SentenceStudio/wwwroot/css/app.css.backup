/* SentenceStudio Blazor Hybrid - Theme & Custom Styles */
/* Bootstrap 5.3 CSS Variables + Custom Extensions */

/* ============================================
   CUSTOM PROPERTIES (no Bootstrap equivalent)
   ============================================ */

:root {
    /* Korean typography */
    --ss-font-family-korean: 'Yeonsung', sans-serif;
    
    /* Proficiency colors */
    --ss-proficiency-low: #FF8C00;
}

/* ============================================
   LIGHT THEME (Bootstrap overrides)
   ============================================ */
[data-bs-theme="light"] {
    /* Override Bootstrap color variables */
    --bs-primary: #1E4DFF;
    --bs-primary-rgb: 30, 77, 255;
    --bs-secondary: #12B886;
    --bs-secondary-rgb: 18, 184, 134;
    --bs-success: #12B886;
    --bs-success-rgb: 18, 184, 134;
    --bs-warning: #FFC233;
    --bs-warning-rgb: 255, 194, 51;
    --bs-danger: #E13B30;
    --bs-danger-rgb: 225, 59, 48;
    --bs-info: #1E4DFF;
    --bs-info-rgb: 30, 77, 255;
    
    /* Body/background colors */
    --bs-body-bg: #F7F8FF;
    --bs-body-bg-rgb: 247, 248, 255;
    --bs-body-color: #0B0D12;
    --bs-body-color-rgb: 11, 13, 18;
    
    /* Secondary background levels */
    --bs-secondary-bg: #FFFFFF;
    --bs-secondary-bg-rgb: 255, 255, 255;
    --bs-tertiary-bg: #EEF1FF;
    --bs-tertiary-bg-rgb: 238, 241, 255;
    
    /* Text colors */
    --bs-secondary-color: #394150;
    --bs-secondary-color-rgb: 57, 65, 80;
    --bs-tertiary-color: #7A8699;
    --bs-tertiary-color-rgb: 122, 134, 153;
    
    /* Borders */
    --bs-border-color: #D6DAF0;
    --bs-border-color-rgb: 214, 218, 240;
    
    /* Custom: no Bootstrap equivalent */
    --ss-on-primary: #FFFFFF;
    --ss-accent: #FF6A3D;
    --ss-on-accent: #FFFFFF;
    --ss-surface-elevated: #FCFDFF;
}

/* ============================================
   DARK THEME (Bootstrap overrides)
   ============================================ */
[data-bs-theme="dark"] {
    /* Override Bootstrap color variables */
    --bs-primary: #6B8CFF;
    --bs-primary-rgb: 107, 140, 255;
    --bs-secondary: #21D6A4;
    --bs-secondary-rgb: 33, 214, 164;
    --bs-success: #12B886;
    --bs-success-rgb: 18, 184, 134;
    --bs-warning: #FFC233;
    --bs-warning-rgb: 255, 194, 51;
    --bs-danger: #E13B30;
    --bs-danger-rgb: 225, 59, 48;
    --bs-info: #6B8CFF;
    --bs-info-rgb: 107, 140, 255;
    
    /* Body/background colors */
    --bs-body-bg: #060913;
    --bs-body-bg-rgb: 6, 9, 19;
    --bs-body-color: #F8FAFF;
    --bs-body-color-rgb: 248, 250, 255;
    
    /* Secondary background levels */
    --bs-secondary-bg: #0C1222;
    --bs-secondary-bg-rgb: 12, 18, 34;
    --bs-tertiary-bg: #121B33;
    --bs-tertiary-bg-rgb: 18, 27, 51;
    
    /* Text colors */
    --bs-secondary-color: #C6D0E7;
    --bs-secondary-color-rgb: 198, 208, 231;
    --bs-tertiary-color: #93A3C7;
    --bs-tertiary-color-rgb: 147, 163, 199;
    
    /* Borders */
    --bs-border-color: #263457;
    --bs-border-color-rgb: 38, 52, 87;
    
    /* Custom: no Bootstrap equivalent */
    --ss-on-primary: #081022;
    --ss-accent: #FF7A4D;
    --ss-on-accent: #0B0D12;
    --ss-surface-elevated: #1A2545;
}

/* ============================================
   BASE STYLES
   ============================================ */
html, body {
    font-family: var(--bs-font-sans-serif);
    background-color: var(--bs-body-bg);
    color: var(--bs-body-color);
    margin: 0;
    padding: 0;
    height: 100%;
}

#app {
    height: 100%;
}

/* Remove Blazor's focus-on-navigate outline from content area */
main:focus,
h1:focus,
h2:focus,
h3:focus,
[tabindex]:focus {
    outline: none !important;
    box-shadow: none !important;
}

/* ============================================
   TYPOGRAPHY (matching ApplicationTheme.Styles.cs)
   ============================================ */
.ss-display {
    font-size: 60px;
    line-height: 1.17;
    font-weight: 700;
    color: var(--ss-text-primary);
}

.ss-large-title {
    font-size: 34px;
    line-height: 1.21;
    font-weight: 700;
    color: var(--ss-text-primary);
}

.ss-title1 {
    font-size: 28px;
    line-height: 1.21;
    color: var(--ss-text-primary);
}

.ss-title2 {
    font-size: 22px;
    line-height: 1.27;
    font-weight: 600;
    color: var(--ss-text-primary);
}

.ss-title3 {
    font-size: 20px;
    line-height: 1.25;
    font-weight: 600;
    color: var(--ss-text-primary);
}

.ss-headline {
    font-size: 32px;
    text-align: center;
    color: var(--ss-text-primary);
}

.ss-subheadline {
    font-size: 24px;
    text-align: center;
    color: var(--ss-text-primary);
}

.ss-body1 {
    font-size: 17px;
    line-height: 1.29;
    color: var(--ss-text-primary);
}

.ss-body1-strong {
    font-size: 17px;
    line-height: 1.29;
    font-weight: 600;
    color: var(--ss-text-primary);
}

.ss-body2 {
    font-size: 15px;
    line-height: 1.33;
    color: var(--ss-text-primary);
}

.ss-body2-strong {
    font-size: 15px;
    line-height: 1.33;
    font-weight: 600;
    color: var(--ss-text-primary);
}

.ss-caption1 {
    font-size: 13px;
    line-height: 1.38;
    color: var(--ss-text-secondary);
}

.ss-caption1-strong {
    font-size: 13px;
    line-height: 1.38;
    font-weight: 600;
    color: var(--ss-text-secondary);
}

.ss-caption2 {
    font-size: 12px;
    line-height: 1.33;
    color: var(--ss-text-muted);
}

/* ============================================
   CARD STYLES
   ============================================ */
.card-ss {
    background-color: var(--ss-surface-variant);
    border: none;
    border-radius: var(--ss-radius-xl);
    padding: var(--ss-card-padding);
}

.card-ss-elevated {
    background-color: var(--ss-surface-elevated);
    border: 1px solid var(--ss-outline);
    border-radius: var(--ss-radius-xl);
    padding: var(--ss-card-padding);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
}

/* ============================================
   BUTTON STYLES (matching theme)
   ============================================ */
.btn-ss-primary {
    background-color: var(--ss-primary);
    border-color: var(--ss-primary);
    color: var(--ss-on-primary);
    font-size: 14px;
    border-radius: var(--ss-radius-md);
    padding: 10px 14px;
    min-height: 44px;
    min-width: 44px;
}

/* Dark mode: darken primary button bg for white text contrast (5.4:1 AA) */
[data-bs-theme="dark"] .btn-ss-primary {
    background-color: #3D5FD0;
    border-color: #3D5FD0;
    color: #FFFFFF;
}

.btn-ss-primary:hover {
    opacity: 0.9;
    color: var(--ss-on-primary);
}

[data-bs-theme="dark"] .btn-ss-primary:hover {
    background-color: #4565D5;
    color: #FFFFFF;
}

.btn-ss-secondary {
    background-color: var(--ss-surface-variant);
    border-color: var(--ss-outline);
    color: var(--ss-text-primary);
    font-size: 14px;
    border-radius: var(--ss-radius-md);
    padding: 10px 14px;
    min-height: 44px;
    min-width: 44px;
}

.btn-ss-secondary:hover {
    background-color: var(--ss-surface-elevated);
    color: var(--ss-text-primary);
}

.btn-ss-accent {
    background-color: var(--ss-accent);
    border-color: var(--ss-accent);
    color: var(--ss-on-accent);
    font-size: 14px;
    border-radius: var(--ss-radius-md);
    padding: 10px 14px;
    min-height: 44px;
    min-width: 44px;
}

.btn-ss-danger {
    background-color: var(--ss-error);
    border-color: var(--ss-error);
    color: white;
    font-size: 14px;
    border-radius: var(--ss-radius-md);
    padding: 10px 14px;
    min-height: 44px;
    min-width: 44px;
}

/* ============================================
   BOOTSTRAP DARK-MODE OVERRIDES
   (btn-outline-* text contrast fix)
   ============================================ */
[data-bs-theme="dark"] .btn-outline-secondary {
    color: var(--ss-text-secondary);
    border-color: var(--ss-outline);
}

[data-bs-theme="dark"] .btn-outline-secondary:hover,
[data-bs-theme="dark"] .btn-check:checked + .btn-outline-secondary {
    background-color: var(--ss-primary);
    border-color: var(--ss-primary);
    color: #FFFFFF;
}

[data-bs-theme="dark"] .btn-outline-danger {
    color: var(--ss-error);
    border-color: var(--ss-error);
}

[data-bs-theme="dark"] .btn-outline-success {
    color: var(--ss-success);
    border-color: var(--ss-success);
}

/* ============================================
   FORM INPUT STYLES
   ============================================ */
.form-control-ss {
    background-color: var(--ss-surface-variant);
    border: 1px solid var(--ss-outline);
    color: var(--ss-text-primary);
    border-radius: var(--ss-radius-md);
    min-height: 44px;
    font-size: 14px;
}

.form-control-ss:focus {
    background-color: var(--ss-surface-variant);
    border-color: var(--ss-primary);
    color: var(--ss-text-primary);
    box-shadow: 0 0 0 0.2rem rgba(107, 140, 255, 0.25);
}

.form-control-ss::placeholder {
    color: var(--ss-text-muted);
}

/* ============================================
   BADGE STYLES
   ============================================ */
.badge-ss {
    background-color: var(--ss-surface-variant);
    color: var(--ss-text-primary);
    border-radius: var(--ss-radius-sm);
    font-size: 13px;
    padding: 4px 8px;
}

.badge-ss-success {
    background-color: var(--ss-success);
    color: white;
}

.badge-ss-warning {
    background-color: var(--ss-warning);
    color: var(--ss-gray-900);
}

/* ============================================
   UTILITY CLASSES
   ============================================ */
.text-primary-ss { color: var(--ss-text-primary) !important; }
.text-secondary-ss { color: var(--ss-text-secondary) !important; }
.text-muted-ss { color: var(--ss-text-muted) !important; }
.text-success-ss { color: var(--ss-success) !important; }
.text-warning-ss { color: var(--ss-warning) !important; }
.text-error-ss { color: var(--ss-error) !important; }
.text-accent-ss { color: var(--ss-accent) !important; }

.bg-surface { background-color: var(--ss-surface) !important; }
.bg-surface-variant { background-color: var(--ss-surface-variant) !important; }
.bg-surface-elevated { background-color: var(--ss-surface-elevated) !important; }

/* ============================================
   MOBILE-RESPONSIVE OVERRIDES
   ============================================ */
@media (max-width: 768px) {
    :root {
        --ss-layout-padding: 12px;
        --ss-layout-spacing: 12px;
        --ss-section-spacing: 20px;
        --ss-card-padding: 8px;
        --ss-card-margin: 8px;
        --ss-grid-spacing: 8px;
    }

    .ss-display { font-size: 42px; }
    .ss-large-title { font-size: 28px; }
    .ss-title1 { font-size: 24px; }
    .ss-headline { font-size: 26px; }
    .ss-subheadline { font-size: 20px; }
}

/* Safe area for mobile status bars */
.status-bar-safe-area {
    display: none;
}

@supports (padding-top: env(safe-area-inset-top)) {
    .status-bar-safe-area {
        display: block;
        height: env(safe-area-inset-top);
    }
}


/* ============================================
   NAVIGATION STYLES
   ============================================ */
.sidebar-nav {
    background-color: var(--ss-surface) !important;
}

.nav-link-ss {
    color: var(--ss-text-secondary) !important;
    font-size: 15px;
    transition: background-color 0.15s, color 0.15s;
}

.nav-link-ss:hover {
    background-color: var(--ss-surface-variant) !important;
    color: var(--ss-text-primary) !important;
}

.nav-link-ss.active {
    background-color: var(--ss-surface-variant) !important;
    color: var(--ss-primary) !important;
    font-weight: 600;
}

/* ============================================
   TOAST NOTIFICATION STYLES
   ============================================ */
.toast-container-ss {
    position: fixed;
    bottom: 1rem;
    right: 1rem;
    z-index: 1090;
}

.toast-ss {
    background-color: var(--ss-surface-elevated);
    color: var(--ss-text-primary);
    border: 1px solid var(--ss-outline);
    border-radius: var(--ss-radius-md);
}

/* ============================================
   MODAL OVERRIDES
   ============================================ */
.modal-content-ss {
    background-color: var(--ss-surface);
    border: 1px solid var(--ss-outline);
    color: var(--ss-text-primary);
}

.offcanvas-ss {
    background-color: var(--ss-surface) !important;
    color: var(--ss-text-primary) !important;
}

/* ============================================
   MOBILE / RESPONSIVE
   ============================================ */

/* iOS safe area insets */
:root {
    --safe-area-top: env(safe-area-inset-top, 0px);
    --safe-area-bottom: env(safe-area-inset-bottom, 0px);
}

/* Page header */
.page-header {
    min-height: 44px;
    margin-bottom: var(--ss-size-160);
}
.page-header-inner {
    min-height: 44px;
}

/* Icon-only buttons (touch-friendly 44px targets) */
.btn-icon {
    min-width: 44px;
    min-height: 44px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: var(--ss-radius-md);
    background: transparent;
    border: none;
}
.btn-icon:hover, .btn-icon:focus {
    background: rgba(255, 255, 255, 0.08);
}

/* Mobile: < 768px */
@media (max-width: 767.98px) {
    /* Mobile main: horizontal padding for all content, no top padding (header handles it) */
    main.main-content {
        padding: 0 var(--ss-size-120) var(--ss-size-120) var(--ss-size-120) !important;
        overflow-x: hidden !important;
        overscroll-behavior-y: none; /* prevent rubber-band bounce that reveals gap above header */
    }

    /* Offcanvas flyout: 90% width, not full screen */
    .offcanvas {
        --bs-offcanvas-width: 90%;
    }

    /* Mobile page header — breaks out of main padding for edge-to-edge background */
    .page-header {
        position: sticky;
        top: 0;
        z-index: 1030;
        background: var(--ss-surface);
        border-bottom: 1px solid var(--ss-outline);
        margin: 0 calc(-1 * var(--ss-size-120));
        padding: 0 var(--ss-size-120);
        padding-top: env(safe-area-inset-top, 0px);
        margin-bottom: var(--ss-size-120);
        min-height: calc(44px + env(safe-area-inset-top, 0px));
    }
    .page-header .page-header-inner {
        min-height: 44px;
        display: flex;
        align-items: center;
    }
    .page-header h1 {
        font-size: 1.125rem;
        font-weight: 600;
    }

    /* Touch-friendly form controls */
    .form-control, .form-select {
        min-height: 44px;
        font-size: 16px; /* prevents iOS zoom on focus */
    }

    /* Touch-friendly buttons */
    .btn {
        min-height: 44px;
        padding-left: 16px;
        padding-right: 16px;
    }
    .btn-sm {
        min-height: 36px;
    }

    /* Cards: reduce padding on mobile */
    .card-ss {
        padding: var(--ss-size-100);
    }

    /* Dropdown menus: larger touch targets */
    .dropdown-menu .dropdown-item {
        padding: 10px 16px;
        min-height: 44px;
        display: flex;
        align-items: center;
    }

    /* Hide desktop-only button labels on mobile */
    .page-header .btn .btn-label-text {
        display: none;
    }
}

/* ── Tom Select theme overrides ── */
.ts-wrapper .ts-control,
.ts-wrapper .ts-control input {
    color: var(--ss-text-primary);
}

.ts-wrapper .ts-control {
    background-color: var(--ss-surface-variant);
    border: 1px solid var(--ss-outline);
    border-radius: var(--ss-radius-md);
    min-height: 44px;
}

.ts-wrapper .ts-dropdown {
    background-color: var(--ss-surface-variant);
    border: 1px solid var(--ss-outline);
    border-radius: var(--ss-radius-md);
    color: var(--ss-text-primary);
}

.ts-wrapper .ts-dropdown .active {
    background-color: var(--ss-primary);
    color: var(--ss-on-primary);
}

.ts-wrapper .ts-dropdown .option {
    color: var(--ss-text-primary);
}

.ts-wrapper .ts-control::placeholder,
.ts-wrapper .ts-control input::placeholder {
    color: var(--ss-text-muted);
}

.ts-wrapper.focus .ts-control {
    border-color: var(--ss-primary);
    box-shadow: 0 0 0 0.2rem rgba(107, 140, 255, 0.25);
}

.ts-wrapper .ts-control .item {
    background-color: var(--ss-primary);
    color: var(--ss-on-primary);
    border: none;
    border-radius: var(--ss-radius-sm);
}
