<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"   
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
            x:Class="SentenceStudio.Pages.Controls.ExplanationPopup"
            Color="Transparent"
            HorizontalOptions="Fill">
    <Grid RowDefinitions="*,Auto" 
        Background="{AppThemeBinding Light={StaticResource LightBackground}, Dark={StaticResource DarkBackground}}" Padding="15"
    Margin="15">
        <ScrollView>
            <VerticalStackLayout Spacing="{StaticResource InterSpacing}">
                <Label Text="Explanation" FontSize="Title" FontAttributes="Bold" TextColor="{AppThemeBinding Light={StaticResource LightText}, Dark={StaticResource DarkText}}"/>
                <Label Text="{Binding Explanation}" FontSize="Body" TextColor="{AppThemeBinding Light={StaticResource LightText}, Dark={StaticResource DarkText}}"/>
            </VerticalStackLayout>
        </ScrollView>

        <Button Text="Cancel" Clicked="OnCloseClicked" Grid.Row="1"/>
    </Grid>
</toolkit:Popup>
